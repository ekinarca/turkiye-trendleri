{
  "name": "turkiye-trendleri",
  "type": "module",
  "version": "1.0.0",
  "description": "Türkiye trendlerinden otomatik haber üreten site",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build && npx pagefind --site dist",
    "preview": "astro preview",
    "astro": "astro",
    "autopublish": "tsx scripts/pipeline/index.ts",
    "autopublish:dry": "DRY_RUN=true tsx scripts/pipeline/index.ts",
    "fetch-trends": "tsx scripts/pipeline/fetch-trends.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx,.astro",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@astrojs/mdx": "^4.0.0",
    "@astrojs/rss": "^4.0.0",
    "@astrojs/sitemap": "^3.2.0",
    "astro": "^5.0.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "fast-xml-parser": "^4.5.0",
    "openai": "^4.70.0",
    "slugify": "^1.6.6",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/string-similarity": "^4.0.2",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "prettier-plugin-astro": "^0.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
