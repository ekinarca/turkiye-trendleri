---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Sayfa Bulunamadı" description="Aradığınız sayfa bulunamadı">
  <div class="not-found">
    <div class="error-code">404</div>
    <h1>Sayfa Bulunamadı</h1>
    <p>Aradığınız sayfa mevcut değil veya taşınmış olabilir.</p>
    <div class="actions">
      <a href="/" class="btn btn-primary">Ana Sayfaya Dön</a>
      <a href="/trendler" class="btn btn-secondary">Trendlere Göz At</a>
    </div>
  </div>
</BaseLayout>

<style>
  .not-found {
    text-align: center;
    padding: 4rem 1rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .error-code {
    font-size: 8rem;
    font-weight: 700;
    color: var(--color-border);
    line-height: 1;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }

  p {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.2s;
  }

  .btn:hover {
    text-decoration: none;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark);
  }

  .btn-secondary {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text);
  }

  .btn-secondary:hover {
    border-color: var(--color-primary);
  }
</style>
