---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import Breadcrumb from '../../../../components/Breadcrumb.astro';
import ArticleCard from '../../../../components/ArticleCard.astro';
import { getCollection } from 'astro:content';
import { 
  getUniqueYears, 
  getUniqueMonths,
  getUniqueDays,
  filterByDay,
  buildArchiveBreadcrumb,
  formatArchiveDate,
  TURKISH_MONTHS,
  MONTH_SLUG_TO_NUMBER,
  MONTH_NUMBER_TO_SLUG,
  getAdjacentPeriods
} from '../../../../utils/archive';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const paths: { params: { yil: string; ay: string; gun: string } }[] = [];
  
  const years = getUniqueYears(posts);
  
  for (const year of years) {
    const months = getUniqueMonths(posts, year);
    for (const month of months) {
      const days = getUniqueDays(posts, year, month);
      const monthSlug = MONTH_NUMBER_TO_SLUG[month];
      
      for (const day of days) {
        paths.push({
          params: { yil: year, ay: monthSlug, gun: day },
        });
      }
    }
  }
  
  return paths;
}

const { yil, ay, gun } = Astro.params;
const monthNumber = MONTH_SLUG_TO_NUMBER[ay];

const allPosts = await getCollection('posts');
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);

const dayPosts = filterByDay(sortedPosts, yil, monthNumber, gun);
const { prev, next } = getAdjacentPeriods(sortedPosts, yil, monthNumber, gun);

const breadcrumbItems = buildArchiveBreadcrumb(yil, monthNumber, gun);

const formattedDate = formatArchiveDate(yil, monthNumber, gun);
const monthName = TURKISH_MONTHS[monthNumber];

// Kategori dağılımını hesapla (frontmatter'da type-safe olarak)
const categoryDistribution: Record<string, number> = {};
for (const post of dayPosts) {
  const cat = post.data.category;
  categoryDistribution[cat] = (categoryDistribution[cat] || 0) + 1;
}
const categoryEntries = Object.entries(categoryDistribution);
---

<BaseLayout 
  title={`${formattedDate} Haberleri`} 
  description={`${formattedDate} tarihinde yayınlanan haberler`}
>
  <div class="archive-page">
    <Breadcrumb items={breadcrumbItems} />
    
    <header class="page-header">
      <div class="day-nav">
        {prev && (
          <a href={`/arsiv/${yil}/${ay}/${prev}`} class="nav-link">
            ← {parseInt(prev, 10)} {monthName}
          </a>
        )}
        <div class="title-group">
          <h1>{parseInt(gun, 10)} {monthName}</h1>
          <a href={`/arsiv/${yil}`} class="year-link">{yil}</a>
        </div>
        {next && (
          <a href={`/arsiv/${yil}/${ay}/${next}`} class="nav-link">
            {parseInt(next, 10)} {monthName} →
          </a>
        )}
      </div>
      <p>{dayPosts.length} haber yayınlandı</p>
    </header>

    <!-- Kategorilere Göre Dağılım -->
    {categoryEntries.length > 0 && (
      <div class="category-summary">
        {categoryEntries.map(([cat, count]) => (
          <span class="cat-badge">
            {cat}: {count}
          </span>
        ))}
      </div>
    )}

    <!-- Makaleler -->
    <section class="articles-section">
      <div class="articles-list">
        {dayPosts.map((post) => (
          <ArticleCard post={post} showArchiveBadge={false} />
        ))}
      </div>
    </section>

    {dayPosts.length === 0 && (
      <div class="empty-state">
        <p>Bu günde haber bulunmuyor.</p>
        <a href={`/arsiv/${yil}/${ay}`} class="back-link">← {monthName} {yil} Arşivine Dön</a>
      </div>
    )}

    <!-- Alt Navigasyon -->
    <nav class="bottom-nav">
      <a href={`/arsiv/${yil}/${ay}`} class="bottom-link">
        ← {monthName} {yil} Arşivi
      </a>
      <a href="/arsiv" class="bottom-link">
        Tüm Arşiv →
      </a>
    </nav>
  </div>
</BaseLayout>

<style>
  .archive-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-border);
  }

  .day-nav {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 0.5rem;
  }

  .title-group {
    text-align: center;
  }

  .title-group h1 {
    margin: 0;
    font-size: 2rem;
  }

  .year-link {
    font-size: 1rem;
    color: var(--color-text-secondary);
  }

  .year-link:hover {
    color: var(--color-primary);
  }

  .nav-link {
    font-size: 0.9rem;
    color: var(--color-link);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    background: var(--color-bg-secondary);
    transition: all 0.2s;
    white-space: nowrap;
  }

  .nav-link:hover {
    background: var(--color-border);
    text-decoration: none;
  }

  .page-header p {
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Category Summary */
  .category-summary {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .cat-badge {
    padding: 0.25rem 0.75rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 20px;
    font-size: 0.8rem;
    color: var(--color-text-secondary);
  }

  /* Articles */
  .articles-section {
    margin-bottom: 2rem;
  }

  .articles-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .empty-state {
    text-align: center;
    padding: 3rem;
    background: var(--color-bg-secondary);
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-block;
    margin-top: 1rem;
    color: var(--color-link);
  }

  /* Bottom Nav */
  .bottom-nav {
    display: flex;
    justify-content: space-between;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .bottom-link {
    font-size: 0.875rem;
    color: var(--color-link);
  }

  @media (max-width: 768px) {
    .day-nav {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
